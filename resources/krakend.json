{
  "version": 2,
  "name": "Test API Gateway",
  "port": 8000,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "extra_config": {},
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/article/{id}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/api/v1/post/{id}",
          "host": [
            "http://localhost:3000"
          ]
        },
        {
          "url_pattern": "/api/v1/category/{resp0_Category}",
          "host": [
            "http://localhost:4000"
          ],
          "group": "category"
        },
        {
          "url_pattern": "/api/v1/user/{resp0_User}",
          "host": [
            "http://localhost:5000"
          ],
          "group": "user"
        }
      ],
      "extra_config": {
        "github.com/devopsfaith/krakend/proxy": {
          "sequential": true
      }
      }
    }
  ]
}
